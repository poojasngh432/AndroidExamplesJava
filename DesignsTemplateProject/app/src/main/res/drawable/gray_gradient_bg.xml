<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/gray_dark1"/>
            <stroke
                android:color="@color/gray_dark1"
                android:width="1dp"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="@color/gray_light5"
                android:centerColor="@color/gray_light1"
                android:endColor="@color/gray_dark1"
                android:angle="-90"/>

            <stroke
                android:color="@color/gray_dark1"
                android:width="1dp"/>
            <corners
                android:radius="3dp"/>
        </shape>
    </item>


</selector>