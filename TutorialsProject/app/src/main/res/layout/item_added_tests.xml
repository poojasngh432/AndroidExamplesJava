<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:id="@+id/flask_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_lab_flask"
        android:layout_marginLeft="@dimen/dimen_16dp" />

    <com.onemg.uilib.components.textview.OnemgTextView
        android:ellipsize="end"
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/dimen_0dp"
        android:maxLines="1"
        android:minLines="1"
        android:textAppearance="@style/Body.Regular.PrimaryInfo"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintStart_toEndOf="@+id/flask_icon"
        app:layout_constraintEnd_toStartOf="@+id/delete_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lipid Profile" />

    <com.onemg.uilib.components.textview.OnemgTextView
        android:ellipsize="end"
        android:id="@+id/label"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/dimen_0dp"
        android:maxLines="1"
        android:textAppearance="@style/ExtraSmall.Regular.SecondaryInfo"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        app:layout_constraintEnd_toStartOf="@+id/delete_icon"
        app:layout_constraintStart_toEndOf="@+id/flask_icon"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="Contains 5 tests" />

    <com.onemg.uilib.components.textview.OnemgTextView
        android:ellipsize="end"
        android:id="@+id/know_more_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_width="@dimen/dimen_0dp"
        android:maxLines="1"
        android:textAppearance="@style/BodySmall.SemiBold.Primary"
        app:layout_constraintEnd_toStartOf="@+id/delete_icon"
        app:layout_constraintStart_toEndOf="@+id/flask_icon"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:layout_goneMarginTop="@dimen/dimen_0dp"
        tools:text="Know more" />

    <ImageView
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:id="@+id/delete_icon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/label"
        app:srcCompat="@drawable/ic_delete_black_18"
        app:tint="@color/primary_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>